<?xml version="1.0" encoding="UTF-8"?>
<toolspec model="0.1" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:noNamespaceSchemaLocation="c:\owndata\scape\toolspec.xsd">
    <id>jhove2</id>
    <name>jhove2</name>
    <homepage>https://bitbucket.org/jhove2/main/wiki/Home</homepage>
    <version>2.0.0</version>
    <installation>
        <os type="linux">
            TODO
        </os>
        <os type="windows">
            TODO
        </os>
    </installation>
    <services>
        <service sid="1" name="jhove2" type="validate" servicepackage="eu.scape_project.pc.services" contextpathprefix="/scapeservices">
            <description>Service for validating Waveform Audio File Format audio files</description>
            <operations>
                <operation oid="1" name="jhove2">
                    <description>Validate wav file(s)</description>
                    <command>/home/bam/bin/jhove2-2.0.0/jhove2.sh -d XML -i ${file1} -o ${output}</command>
                    <inputs>
                        <input name="file1">
                            <Datatype>xsd:anyURI</Datatype>
                            <Required>true</Required>
                            <Default>http://localhost:8180/scape/testdata/90531-track-01.tmp.wav</Default>
                            <CliMapping>file1</CliMapping>
                            <Documentation>URL reference to wav input file 1</Documentation>
                        </input>
                    </inputs>
                    <outputs>
                        <output name="output">
                            <Datatype>xsd:anyURI</Datatype>
                            <CliMapping>output</CliMapping>
                            <Required>true</Required>
                            <Documentation>URL reference to XML output file</Documentation>
                            <PrefixFromInput>file1</PrefixFromInput>
                            <Extension>xml</Extension>
                        </output>
                    </outputs>
                </operation>
            </operations>
            <deployto>
                <deployref default="true" ref="local"/>
            </deployto>
        </service>
    </services>
    <deployments>
        <deployment id="local">
            <identifier>http://localhost:8080/scape/default/tomcat1</identifier>
            <host>localhost</host>
            <ports>
                <port type="http">8080</port>
                <port type="https">8043</port>
            </ports>
            <manager>
              <user>tomcat</user>
              <password>password</password>
              <path>manager/text</path>
            </manager>
            <dataexchange>
                <accessdir>/home/bam/apache-tomcat-7.0.22/webapps/ROOT/scape/tmp/</accessdir>
                <accessurl>http://localhost:8180/scape/tmp/</accessurl>
            </dataexchange>
        </deployment>
    </deployments>
</toolspec>
